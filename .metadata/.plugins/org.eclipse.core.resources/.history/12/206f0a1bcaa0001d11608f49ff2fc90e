package oo.heranca.desafio;

public class Carro {
	
	/*
	 * velocidade atual
	 * metodo acelerar e freiar - de 5 em 5 
	 * a velocidade do carro nÃ£o pode ser menor que 0 (no freiar)
	 * na ferrari - acelerar de 15 em 15
	 */
	
	int velocidadeAtual;
	
	void acelerar() {
		this.velocidadeAtual += 5;
	}
	
	void freiar() {
		if (velocidadeAtual >= 5) {
			this.velocidadeAtual -= 5;
		} else {
			velocidadeAtual = 0;
		}
		
	}

}
