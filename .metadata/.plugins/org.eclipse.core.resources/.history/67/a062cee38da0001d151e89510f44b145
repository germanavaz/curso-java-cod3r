package oo.composicao;

public class Sistema {
	
	public static void main(String[] args) {
		
		Compra compra1 = new Compra();
		compra1.adicionarItem("Caneta", 9.58, 100);
		compra1.adicionarItem(new Produto("Notebook", 1897.88), 2);
		
		Compra compra2 = new Compra();
		compra1.adicionarItem("Caderno", 10, 0);
		compra1.adicionarItem(new Produto("Impressora", 998.90), 2);

		Cliente cliente = new Cliente("Maria JÃºlia Moraes");
		cliente.compras.add(compra1);
		cliente.compras.add(compra2);
		
		System.out.println(cliente.obterValorTotal());
	}
}
